<scroll-view>
	<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
		<view slot="backText">返回</view>
		<view slot="content">我的预约</view>
	</cu-custom>
	<form>
		<view class="cu-form-group margin-top ">
			<view class="title">场地选择</view>
			<picker bindchange="placeChange" value="{{place_index}}" range="{{places}}" range-key="name">
				<view class="picker">
					{{place_index?places[place_index].name:'场地选择'}}
				</view>
			</picker>
		</view>
		<view class="cu-form-group">
			<view class="title">日期选择</view>
			<picker mode="date" value="{{date1}}"  bindchange="DateChange">
				<view class="picker">
					{{date1}}
				</view>
			</picker>
		</view>
	</form>


	<view wx:for="{{bookRecorders}}" wx:for-item="recorder" wx:for-index="Index" data-index="{{Index}}" data-id="{{recorder.id}}" data-operator="{{recorder.operator}}" class='margin-top' wx:key='Index'>
		<view class="cu-bar bg-white solid-bottom">
			<view class="action">
				<text class="title text-orange">{{recorder.name}}</text>
			</view>
			<view class="action">
				<button class="cu-btn bg-red shadow" data-id="{{recorder.id}}" data-operator="{{recorder.operator}}"  data-index="{{Index}}" bindtap="del">取消</button>
			</view>
		</view>
		<view class="bg-white padding">
			<view class="cu-steps">
				<view class="cu-item ">
					<text class="cuIcon-usefullfill" ></text> {{recorder.date}}
				</view>
				<view class="cu-item">
					<text class="cuIcon-usefullfill"></text> {{recorder.start_time+" "+"-"+" "+recorder.end_time}}
				</view>
	
				<view class="cu-item">
					<text class="cuIcon-usefullfill"></text> {{recorder.operator}}
				</view>
			</view>
		</view>
	</view>
</scroll-view>