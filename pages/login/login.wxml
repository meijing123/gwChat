<cu-custom bgColor="bg-gradual-blue" isBack="{{true}}">
  <view slot="backText">返回</view>
  <view slot="content">登录界面</view>
</cu-custom>
<view class="content">
  <view class="account">
    <view class="user">账号</view>
    <view class="num">
      <input bindinput="accountInput" placeholder="请输入管理员账号" placeholder-style="color:#999999;" />
    </view>
  </view>
  <view class="hr"></view>
  <view class="account">
    <view class="user">密码</view>
    <view class="num">
      <input type="{{Show}}" bindinput="pwdBlur" placeholder="请输入密码" placeholder-style="color:#999999;" />
    </view>
    
  </view>
  <view class="hr"></view>
  <view class="cu-bar btn-group margin-toplg">
    <button class="cu-btn bg-blue shadow-blur round lg" bindtap='login'>登录</button>
  </view>
  
</view>